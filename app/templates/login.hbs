<div class="row" style="margin-top: 8%;">
  <div class="col s12 m6 offset-m3">
    <h5 class="center-align" style="margin-top: 3%;">Login</h5>
    <h6 class="center-align" style="margin-top: 3%;">Raffle It</h6>
    <div class="center-align"><a class="waves-effect waves-light btn light-blue darken-4" style="width: 80%; margin-top: 3%;"><i class="fa fa-facebook fa-2x" style="margin-right: 3%;" aria-hidden="true"></i>Entrar con Facebook</a></div>
    <div class="center-align"><a class="waves-effect waves-light btn light red darken-4" style="width: 80%; margin-top: 3%; margin-bottom: 3%;"><i class="fa fa-google fa-2x" style="margin-right: 3%;" aria-hidden="true"></i>Entrar con Google +</a></div>
    <div class="divider"></div>
    <!--form-->
    <div class="row">
      <form class="col s12">
        <div class="row">
          <div class="col s12">
            <div class="input-field col s12 m8 offset-m2 cb">
              <i class="material-icons prefix cb">account_circle</i> {{input id="name" type="text" class="validate cb" value=email}}
              <label for="name" class="cb">Usuario</label>
            </div>
            <div class="input-field col s12 m8 offset-m2 cb">
              <i class="material-icons prefix cb">vpn_key</i> {{input id="password" type="password" class="validate cb" value=pass}}
              <label for="password" class="cb">Contrase√±a</label>
            </div>
          </div>
        </div>
      </form>
      <a {{action 'login' email pass}} class="waves-effect waves-light btn right blue"><i class="material-icons right">trending_flat</i>Entrar</a>
    </div>
  </div>
</div>